// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id         String    @id @default(uuid())
  name       String
  email      String    @unique
  password   String
  selling    Product[] @relation("seller")
  favProduct Product[] @relation("favorite")
}

model Product {
  id           String   @id @default(uuid())
  name         String
  price        Float
  description  String
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  seller       User     @relation("seller", fields: [sellerId], references: [id])
  sellerId     String
  favoriteBy   User?    @relation("favorite", fields: [favoriteById], references: [id])
  favoriteById String?
  category     Category @relation(fields: [categoryName], references: [name])
  categoryName String

  @@index([name])
}

model Category {
  id      Int       @id @default(autoincrement())
  name    String    @unique @default(uuid())
  Product Product[]
}
